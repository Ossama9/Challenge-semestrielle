{% extends 'base_front.html.twig' %}
{% block title %}My Reservations{% endblock %}

{% block main %}
<div class="py-10 bg-gray-150">
    <div id="hotelContainer" class="mx-auto grid max-w-6xl  grid-cols-1 gap-6 p-6 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2">
        <article class="flex justify-between rounded-xl bg-white p-3 shadow-lg hover:shadow-xl hover:transform  duration-300 ">
            <div>
                <h3 class="font-bold text-2xl"><i class="fa fa-home"></i> {{ announce }}</h3><br>
                <div class="mt-1 p-2">
                    <h2 class="text-slate-700"><strong>{{ reservation.name }}</strong></h2>
                    <h2 class="text-slate-700"><strong>Price : {{ reservation.price }}â‚¬</strong></h2>
                    <h2 class="text-slate-700"><strong>{{ reservation.start ? reservation.start|date('Y-m-d') : '' }} TO {{ reservation.end ? reservation.end|date('Y-m-d') : '' }}</strong></h2>
                </div>
                <h3 class="font-bold text-xl">Booking date : {{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</h3>
                <br><br>
                <div>
                    <a class="btn-danger" href="{{ path('front_app_reservation_edit', {'id': reservation.id}) }}">Modifier</a>
                    <a class="btn-primary" href="{{ path('front_reservation.pdf', {'id': reservation.id}) }}">PDF</a>
                    <a class="btn-primary" href="{{ path('front_app_reservation_index') }}">Mes reservations</a>
                </div>
            </div>
            <div>
                <img class="max-h-[150px] rounded-xl" src="{{ reservation.announce.hotel.image}}" alt="{{ reservation.announce.hotel.name}}">
            </div>
        </article>
    </div>
</div>





{% endblock %}
