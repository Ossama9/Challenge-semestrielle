{% extends 'base_blank.html.twig' %}

{% block title %}{{ app_name }} - Connexion{% endblock %}

{% block main %}
<div class="flex flex-row h-screen overflow-hidden">
    <section class="h-screen w-1/2 max-md:hidden max-sm:hidden lg:block">
        <div class="h-screen">
            <div id="slider-1" class="container mx-auto h-screen">
                <div class="imageBack bg-cover bg-center h-screen text-white py-24 px-10 object-fill" style="background-image: url('https://images.unsplash.com/photo-1664355221081-85e7e5e6d475?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80')">
                    <div class="md:w-1/2">
                        <p class="font-bold text-sm uppercase">Avec Hotelia profitez de</p>
                        <p class="text-3xl font-bold">Destination de rêves</p>
                        <p class="text-2xl mb-10 leading-none">Retrouvez les dans notre onglet dédié</p>
                        <a href="{{ path('front_app_hotel_index') }}" class="bg-indigo-600 py-4 px-8 text-white font-bold uppercase text-xs rounded hover:bg-gray-200 hover:text-gray-800">Voir les hotels</a>
                    </div>
                </div>
                <br>
            </div>
            <div id="slider-2" class="container mx-auto h-screen">
                <div class="imageBack bg-cover bg-top h-screen text-white py-24 px-10 object-fill" style="background-image: url('https://images.unsplash.com/photo-1571003123894-1f0594d2b5d9?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=749&q=80')">
                    <p class="font-bold text-sm uppercase">Hotelia vous propose aussi</p>
                    <p class="text-3xl font-bold">Des offres exceptionnelles</p>
                    <p class="text-2xl mb-10 leading-none">A prix moindre et pour réaliser des économies</p>
                    <a href="{{ path('front_app_announce_index') }}" class="bg-indigo-600 py-4 px-8 text-white font-bold uppercase text-xs rounded hover:bg-gray-200 hover:text-gray-800">Voir les annonces</a>
                </div>
                <br>
            </div>
            <div id="slider-3" class="container mx-auto h-screen">
                <div class="imageBack bg-cover bg-top h-screen text-white py-24 px-10 object-fill" style="background-image: url('https://images.unsplash.com/photo-1580223530509-849e0ad583ca?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1974&q=80')">
                    <p class="font-bold text-sm uppercase">Hotelia vous accompagne</p>
                    <p class="text-3xl font-bold">Pour toute la famille</p>
                    <p class="text-2xl mb-10 leading-none">Dans vos endroits favoris</p>
                </div>
                <br>
            </div>
        </div>
    </section>
    <section class="flex flex-col items-center justify-center lg:w-1/2 bg-gray-50 max-md:w-screen max-sm:w-screen w-full">

        <form class="w-full h-full flex justify-center" method="post">
                <div class="flex flex-col justify-center h-full w-8/12 space-y-6">
                    <div>
                        {% if error.message is defined and error.message != "" %}
                            <div class="alert alert-error">
                                {{ error.messageKey|trans(error.messageData, 'security') }}

                            </div>
                        {% else %}
                            {% include 'partials/_message_flash.html.twig' %}

                        {% endif %}
                    </div>
                    <div>
                        <h1 class="text-4xl font-semibold mb-3">Welcome back</h1>
                        <p class="font-medium text-lg">Welcome back ! please enter your details.</p>
                    </div>

                    <label class="text-xl" for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="border border-gray-200 placeholder:italic placeholder:text-slate-400 focus:outline-none shadow p-4 rounded-xl" placeholder="Enter your email" autocomplete="email" required>
                    <label class="text-xl" for="inputPassword">Password</label>
                    <div class="flex item-center border border-gray-200 shadow p-4 rounded-xl bg-white">
                        <input type="password" name="password" id="inputPassword" class="placeholder:italic placeholder:text-slate-400 focus:outline-none w-full" placeholder="Enter your Password" autocomplete="current-password" required>
                        <span class="material-icons eye cursor-pointer">visibility</span>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="flex space-x-4 justify-between">
                        <div class="mb-3 flex items-center">
                                <input class="accent-indigo-600 rounded-xl text-lg w-[1.25rem] h-[1.25rem]" type="checkbox" name="_remember_me" id="remember_me">
                                <label class="text-lg ml-2" for="remember_me">Remember me for 30 days </label>
                        </div>
                        <a class="text-indigo-600 font-medium text-lg" href="{{ path('front_app_forgot_password_request') }}">Forgot my password</a>
                    </div>
                    <button class="bg-indigo-600 rounded-xl py-3 text-xl font-medium text-white shadow" type="submit">Sign In</button>
                    <div class="flex justify-center text-lg font-medium">
                        <p>Dont have an account ? <a class="text-indigo-600 underline" href="{{ path('app_register') }}">Sign up</a></p>
                    </div>
                </div>
        </form>
    </section>
{% endblock %}
