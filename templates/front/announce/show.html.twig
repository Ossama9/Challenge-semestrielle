{% extends 'base_front.html.twig' %}

{% block title %}{{ app_name }} - Annonce - {{ announce.title }}{% endblock %}

{% block main %}
<div class="py-10 bg-gray-150">
    <div id="hotelContainer" class="mx-auto grid max-w-6xl  grid-cols-1 gap-6 p-6 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2">
        <div>
        <article class="rounded-xl bg-white p-3 shadow-lg hover:shadow-xl hover:transform hover:scale-105 duration-300 ">
            <a href="#">
                <div class="relative flex items-end overflow-hidden rounded-xl">
                    <img src="{{ announce.hotel.image }}" class="w-fit h-full" alt="Hotel Photo" loading="lazy" >
                </div>
                <div class="mt-1 p-2">
                    <h2 class="text-slate-700">{{ announce.title }}</h2>
                    <p class="mt-1 text-sm text-slate-400">{{ hotel.ville }}, {{ hotel.country }}</p>
                    <div class="mt-3 items-end justify-between">
                        <p class="text-lg font-bold text-blue-500">
                            <a href="{{ path('front_app_hotel_show', {'id': hotel.id}) }}">{{ hotel.name  }} Hotel</a> -
                            {% for i in 1..hotel.note %}
                                <i class="fa fa-star gold" style="color: gold"></i>
                            {% endfor %}</p>
                    </div>
                    <span class="font-semibold">{{ announce.price }}€ / Jour</span><br>
                </div>
            </a>
        </article>
        </div>
        <div>
            <article style="background-color: #DDECF5" class="rounded-xl bg-white p-3 shadow-lg hover:shadow-xl">
                <h3 class="font-bold text-2xl"><i class="fa fa-home"></i> {{ announce.title }}</h3><br>
                <h3 class="font-bold text-lg">Adresse : </h3><p class="text-zinc-500 text-base font-bold">{{ hotel.adresse }}, {{ hotel.ville }}, {{ hotel.codePostal }}</p><br>
                <h3 class="font-bold text-lg">Téléphone : </h3><p class="text-zinc-500 text-base font-bold">{{ hotel.telephone }}</p><br>
                <h3 class="font-bold text-lg">Description : </h3><p class="text-zinc-500 text-base font-bold">{{ announce.description }}</p><br>
                <h3 class="font-bold text-lg">Options : </h3><p class="text-zinc-500 text-base font-bold">{{ announce.options }}</p><br>
                <h3 class="font-bold text-lg">Number Beds : </h3><p class="text-zinc-500 text-base font-bold">{{ announce.numberOfBeds }}</p><br>
            </article><br><br>
            <article style="background-color: #DDECF5" class="rounded-xl p-3 shadow-lg hover:shadow-xl">
                <section>
                    <div class="flex flex-col rounded-xl shadow focus:outline-none h-[30rem] w-[33rem] backdrop-blur-[2px]">
                        <div class="flex flex-col ml-8 mb-4 space-y-4">
                            <div class="flex flex-row items-center mt-4">
                                <svg class="fill-black mr-3" xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24"><path d="M7 11h2v2H7zm0 4h2v2H7zm4-4h2v2h-2zm0 4h2v2h-2zm4-4h2v2h-2zm0 4h2v2h-2z"></path><path d="M5 22h14c1.103 0 2-.897 2-2V6c0-1.103-.897-2-2-2h-2V2h-2v2H9V2H7v2H5c-1.103 0-2 .897-2 2v14c0 1.103.897 2 2 2zM19 8l.001 12H5V8h14z"></path></svg>
                                <h4 class="font-bold text-2xl">Start Booking Your Hotel</h4>
                            </div>
                            <p class="text-zinc-500 text-lg font-bold">Find place that suits for your need, it's easy .</p>
                        </div>
                        <hr>
                        <form class="flex flex-col" method="POST">
                            <div class="ml-8 flex flex-col mt-12">
                                <div class="flex flex-row">
                                    <svg class="fill-zinc-500 mr-3 mb-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><circle cx="12" cy="12" r="4"></circle><path d="M13 4.069V2h-2v2.069A8.01 8.01 0 0 0 4.069 11H2v2h2.069A8.008 8.008 0 0 0 11 19.931V22h2v-2.069A8.007 8.007 0 0 0 19.931 13H22v-2h-2.069A8.008 8.008 0 0 0 13 4.069zM12 18c-3.309 0-6-2.691-6-6s2.691-6 6-6 6 2.691 6 6-2.691 6-6 6z"></path></svg>
                                    <label for="placeName" class="text-zinc-500 font-semibold">Nom de l'Hotel</label>
                                </div>
                                <p class="text-zinc-500 text-xl font-bold">{{ hotel.ville }}</p>
                            </div>
                            <div class="ml-8 mb-4 flex flex-row items-center mt-12 gap-x-16">
                                {{ include('front/reservation/_form.html.twig') }}
                            </div>
                        </form>
                    </div>
                </section>

            </article>
        </div>
    </div>
</div>
{% endblock %}
