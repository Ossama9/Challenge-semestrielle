{% extends 'base_front.html.twig' %}

{% block title %}{{ app_name }} - Demande de création d'hotel{% endblock %}

{% block main %}
    <section class="flex flex-col items-center bg-gray-50 rounded-xl gap-3 h-[52rem] ">
            <h1 class="text-4xl font-bold text-center">Demande de création d'hotel</h1>
            <br>
            {{ form_start(form, {'attr': {'class': 'flex flex-col items-center gap-3', 'method': 'POST', 'multipart' : 'true'}})}}
                    <div class="mr-4 gap-3 flex flex-row justify-center items-center">
                            {{ form_row(form.iban) }}
                    </div>
                    <div class="mr-4 gap-3 flex flex-row justify-center items-center">
                            {{ form_row(form.name) }}
                    </div>
                    <div class="mr-4 gap-3 flex flex-row justify-center items-center">
                            {{ form_row(form.adresse) }}
                    </div>
                    <div class="mr-4 gap-3 flex flex-row justify-center items-center">
                            {{ form_row(form.codePostal) }}
                    </div>
                    <div class="mr-4 gap-3 flex flex-row justify-center items-center">
                            {{ form_row(form.ville) }}
                    </div>
                    <div class="mr-4 gap-3 flex flex-row justify-center items-center">
                            {{ form_row(form.country) }}
                    </div>
                    <div class="mr-4 gap-3 flex flex-row justify-center items-center">
                            {{ form_row(form.telephone) }}
                    </div>
                    <div class="mr-4 gap-3 flex flex-row justify-center items-center">
                        {{ form_row(form.description) }}
                    </div>
                    <div class="mr-4 gap-3 flex flex-row justify-center items-center">
                            {{ form_row(form.image) }}
                    </div>
                    <br>
                    <button class="bg-indigo-600 rounded-xl py-3 text-xl font-medium text-white shadow" type="submit">Envoyer la demande</button>
        {{ form_end(form) }}
    </section>
{% endblock %}
